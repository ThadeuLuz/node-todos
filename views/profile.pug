extends partials/layout

block content

  form.mdl-card.mdl-shadow--2dp.main-card(method='post')
    .mdl-card__title.mdl-card--border
      h2.mdl-card__title-text Profile
    .mdl-card__supporting-text
      
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label(style="width: 100%")
        input#name.mdl-textfield__input(type='text', name='name', pattern='.{2,}', value=user.name)
        label.mdl-textfield__label(for='name') Name
        span.mdl-textfield__error At least 2 chars

      include partials/messages

    .mdl-card__actions.mdl-card--border(style='text-align: right;')
      button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent
        | Save
